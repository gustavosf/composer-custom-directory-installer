{
  "name": "gustavosf/composer-custom-directory-installer",
  "type": "composer-plugin",
  "description": "A composer plugin, to help install packages of different types in custom paths.",
  "license": "MIT",
  "keywords": ["composer", "composer-plugin", "composer-installer"],
  "authors": [
    {
      "name": "Mina Nabil Sami",
      "email": "mina.nsami@gmail.com"
    },
    {
      "name": "Gustavo Seganfredo",
      "email": "gustavosf@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=5.3",
    "composer-plugin-api": "*"
  },
  "repositories": [{
    "type": "vcs",
    "url": "gustavosf/composer-custom-directory-installer"
  }],
  "autoload": {
    "psr-0": {"Composer\\CustomDirectoryInstaller": "src/"}
  },
  "extra": {
    "class": ["Composer\\CustomDirectoryInstaller\\LibraryPlugin", "Composer\\CustomDirectoryInstaller\\PearPlugin"]
  }
}
